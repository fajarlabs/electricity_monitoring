<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect Server"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="https://dragino.000webhostapp.com/get_data.php"
            android:textSize="12sp"
            tools:text="https://dragino.000webhostapp.com/get_data.php" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_s"
                android:layout_width="244dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="PHASE R"
                android:textColor="#00897B"
                android:textStyle="bold"
                tools:text="PHASE R" />

            <TextView
                android:id="@+id/txt_phase_r"
                android:layout_width="192dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="244dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="PHASE S"
                android:textColor="#43A047"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_phase_s"
                android:layout_width="192dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="244dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="PHASE T"
                android:textColor="#F4511E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_phase_t"
                android:layout_width="192dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="244dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TEMPERATURE 1"
                android:textColor="#FB8C00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_temp_1"
                android:layout_width="192dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="244dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TEMPERATURE 2"
                android:textColor="#FB8C00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_temp_2"
                android:layout_width="192dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7CB342"
                android:text="CONNECT"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>